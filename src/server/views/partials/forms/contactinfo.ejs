<fieldset>
  <form class="contactinfo" action="/users/<%=user%>/contacts" method="post">
    <input type="text" name="first_name" placeholder="First Name" value="">
    <input type="text" name="last_name" placeholder="Last Name" value="">
    <input type="text" name="email" placeholder="Email" value="">
    <input type="phone" name="phone_num" placeholder="Phone Number" value="">
    <input type="text" name="linkedin_url" placeholder="LinkedIn Account" value="">
    <input type="text" name="twitter_url" placeholder="Twitter Account" value="">
    <input type="text" name="job_title" placeholder="Job Title" value="">
    <input type="text" name="company" placeholder="Company" value="">
    <input type="hidden" name="user_id" value="<%=user%>">
    <input type="submit">
  </form>
</fieldset>
